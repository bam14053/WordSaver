<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/activity_main_button_width"
        android:layout_height="wrap_content"
        android:text="@string/main_dictionary"
        android:id="@+id/dictionary"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/activity_main_vertical_margin"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/activity_main_button_width"
        android:layout_height="wrap_content"
        android:text="@string/main_learn"
        android:id="@+id/learn"
        android:layout_below="@+id/dictionary"
        android:layout_marginTop="@dimen/activity_main_vertical_margin" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/activity_main_button_width"
        android:layout_height="wrap_content"
        android:text="@string/main_quiz"
        android:id="@+id/quiz"
        android:layout_below="@+id/learn"
        android:layout_marginTop="@dimen/activity_main_vertical_margin" />
</RelativeLayout>
